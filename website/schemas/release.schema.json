{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://yarafie.github.io/awesome-ha-blueprints/schemas/release.schema.json",
  "title": "Awesome HA Library - Unified Release Schema",
  "description": "Canonical schema describing a blueprint release for controllers, hooks, and automations.",
  "type": "object",
  "required": [
    "release_id",
    "library_id",
    "blueprint_id",
    "title",
    "maintainers",
    "description",
    "versions",
    "latest_version",
    "status"
  ],
  "properties": {
    "release_id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Release identifier (folder name, e.g. 'awesome', 'anything')."
    },
    "library_id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Owning library identifier."
    },
    "blueprint_id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Blueprint identifier this release belongs to."
    },
    "title": {
      "type": "string",
      "description": "Human-readable release title."
    },
    "maintainers": {
      "type": "array",
      "minItems": 1,
      "description": "Maintainers responsible for this release.",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Maintainer identifier (e.g. GitHub username)."
          },
          "name": {
            "type": "string",
            "description": "Display name of the maintainer."
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "Optional maintainer homepage or profile."
          }
        },
        "additionalProperties": false
      }
    },
    "description": {
      "type": "string",
      "description": "Description of this release."
    },
    "versions": {
      "type": "array",
      "minItems": 1,
      "description": "List of version identifiers included in this release.",
      "items": {
        "type": "string",
        "pattern": "^\\d{4}\\.\\d{2}\\.\\d{2}$"
      }
    },
    "latest_version": {
      "type": "string",
      "pattern": "^\\d{4}\\.\\d{2}\\.\\d{2}$",
      "description": "Latest version identifier for this release."
    },
    "supported_integrations": {
      "type": "array",
      "description": "Integrations supported by this release (primarily controllers).",
      "items": {
        "type": "string"
      }
    },
    "external_references": {
      "type": "array",
      "description": "Optional external references related to this release.",
      "items": {
        "type": "object",
        "required": ["label", "url"],
        "properties": {
          "label": {
            "type": "string",
            "description": "Short label for the reference."
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "External reference URL."
          }
        },
        "additionalProperties": false
      }
    },
    "status": {
      "type": "string",
      "enum": ["active", "deprecated"],
      "description": "Lifecycle status of this release."
    }
  },
  "additionalProperties": false
}
