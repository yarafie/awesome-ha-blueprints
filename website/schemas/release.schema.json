{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://awesome-ha-blueprints.dev/schemas/release.schema.json",
  "title": "Awesome HA Library â€“ Release Schema",
  "description": "Canonical schema describing a single blueprint release (maintainer-owned grouping of versions).",
  "type": "object",
  "required": [
    "category",
    "blueprint_id",
    "library_id",
    "release_id",
    "title",
    "description",
    "maintainers",
    "versions",
    "latest_version",
    "status"
  ],
  "properties": {
    "category": {
      "type": "string",
      "enum": ["controllers", "hooks", "automations"],
      "description": "Blueprint category."
    },

    "blueprint_id": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$",
      "description": "Blueprint identifier this release belongs to."
    },

    "library_id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Owning library identifier."
    },

    "release_id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Release identifier (folder name, e.g. 'awesome')."
    },

    "title": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable release title."
    },

    "description": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable description of this release."
    },

    "maintainers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "url": { "type": "string", "format": "uri" }
        }
      }
    },

    "versions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^\\d{4}\\.\\d{2}\\.\\d{2}$"
      }
    },

    "latest_version": {
      "type": "string",
      "pattern": "^\\d{4}\\.\\d{2}\\.\\d{2}$"
    },

    "supported_hooks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9_]+$"
      },
      "description": "Hooks supported by this controller release."
    },

    "supported_controllers": {
      "type": "object",
      "required": ["controllers", "count"],
      "additionalProperties": false,
      "properties": {
        "controllers": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9_]+$"
          }
        },
        "count": {
          "type": "integer",
          "minimum": 1
        }
      }
    },

    "supported_integrations": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Integrations supported by this release (controllers only)."
    },

    "external_references": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["label", "url"],
        "additionalProperties": false,
        "properties": {
          "label": { "type": "string", "minLength": 1 },
          "url": { "type": "string", "format": "uri" }
        }
      }
    },

    "status": {
      "type": "string",
      "enum": ["active", "testing", "development", "retired", "deprecated"],
      "description": "Lifecycle status of the release."
    }
  },

  "allOf": [
    {
      "if": { "properties": { "category": { "const": "controllers" } } },
      "then": {
        "required": ["supported_hooks"],
        "not": { "required": ["supported_controllers"] }
      }
    },

    {
      "if": { "properties": { "category": { "const": "hooks" } } },
      "then": {
        "required": ["supported_controllers"],
        "not": {
          "anyOf": [
            { "required": ["supported_hooks"] },
            { "required": ["supported_integrations"] }
          ]
        }
      }
    },

    {
      "if": { "properties": { "category": { "const": "automations" } } },
      "then": {
        "not": {
          "anyOf": [
            { "required": ["supported_hooks"] },
            { "required": ["supported_controllers"] },
            { "required": ["supported_integrations"] }
          ]
        }
      }
    }
  ],

  "additionalProperties": false
}
