{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://awesome-ha-blueprints.dev/schemas/version.mdx.schema.json",
  "title": "Blueprint Version MDX Frontmatter Schema",
  "description": "Frontmatter schema for version-scoped documentation pages. All canonical data is sourced from JSON; MDX contains presentation-only metadata.",
  "type": "object",
  "required": ["title"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "description": "Optional Docusaurus page id override."
    },

    "title": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable title shown at the top of the version documentation."
    },

    "description": {
      "type": "string",
      "description": "Optional short description shown under the title."
    },

    "manufacturer": {
      "type": "string",
      "description": "Controller manufacturer (controllers only)."
    },

    "model": {
      "type": "string",
      "description": "Controller model identifier (controllers only)."
    },

    "model_name": {
      "type": "string",
      "description": "Human-readable controller model name (controllers only)."
    },

    "integrations": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Supported integrations (controllers only)."
    }
  }
}
