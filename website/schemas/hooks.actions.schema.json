{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://awesome-ha-blueprints.dev/schemas/hooks.actions.schema.json",
  "title": "Hook Actions Schema",
  "description": "Canonical action model for a Hook release. Derived from the blueprint YAML and used for documentation, tooling, and compatibility checks.",
  "type": "object",
  "required": ["hook", "actions"],
  "additionalProperties": false,
  "properties": {
    "hook": {
      "type": "string",
      "description": "Hook identifier (e.g. light, cover, media_player)",
      "pattern": "^[a-z0-9_]+$"
    },
    "actions": {
      "type": "array",
      "description": "List of actions supported by this hook release",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "$ref": "#/$defs/action"
      }
    }
  },
  "$defs": {
    "action": {
      "type": "object",
      "required": ["id", "label", "mode"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "description": "Canonical action identifier (matches YAML variable name)",
          "pattern": "^[a-z0-9_]+$"
        },
        "label": {
          "type": "string",
          "description": "Human-readable action label",
          "minLength": 1
        },
        "mode": {
          "type": "string",
          "description": "Execution behavior of the action",
          "enum": ["single", "continuous"]
        },
        "group": {
          "type": "string",
          "description": "Optional logical grouping for UI (e.g. Power, Brightness, Color, Transport)",
          "minLength": 1
        },
        "notes": {
          "type": "string",
          "description": "Optional clarifying notes shown in documentation"
        }
      }
    }
  }
}
