{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://yarafie.github.io/awesome-ha-blueprints/schemas/changelog.schema.json",
  "title": "Awesome HA Library - Unified Changelog Schema",
  "description": "Schema describing changelog.json files used across controllers, hooks, and automations.",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["date", "changes"],
    "properties": {
      "date": {
        "type": "string",
        "pattern": "^\\d{4}\\.\\d{2}\\.\\d{2}$",
        "description": "Changelog entry date in YYYY.MM.DD format."
      },

      "changes": {
        "type": "array",
        "minItems": 1,
        "description": "List of changes introduced on this date.",
        "items": {
          "type": "object",
          "required": ["author", "description"],
          "properties": {
            "author": {
              "type": "string",
              "description": "Author of the change (e.g. GitHub handle, contributor name)."
            },

            "description": {
              "type": "string",
              "description": "Human-readable description of the change."
            },

            "type": {
              "type": "string",
              "enum": ["feature", "fix", "refactor", "docs"],
              "description": "Optional classification of the change."
            },

            "breaking": {
              "type": "boolean",
              "default": false,
              "description": "Whether this change introduces a breaking change."
            },

            "external_references": {
              "type": "array",
              "description": "Optional external references related to this change (PRs, issues, documentation).",
              "items": {
                "type": "object",
                "required": ["label", "url"],
                "properties": {
                  "label": {
                    "type": "string",
                    "description": "Short label for the reference (e.g. 'PR #42')."
                  },
                  "url": {
                    "type": "string",
                    "format": "uri",
                    "description": "External reference URL."
                  }
                },
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        }
      }
    },

    "additionalProperties": false
  }
}
