{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://yarafie.github.io/awesome-ha-blueprints/schemas/version.schema.json",
  "title": "Awesome HA Library â€“ Version Schema",
  "description": "Canonical schema describing a single blueprint version.",
  "type": "object",
  "required": [
    "category",
    "blueprint_id",
    "library_id",
    "release_id",
    "version",
    "date",
    "title",
    "description",
    "maintainers",
    "blueprint_file",
    "status"
  ],
  "properties": {
    "category": {
      "type": "string",
      "enum": ["controllers", "hooks", "automations"]
    },

    "blueprint_id": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$"
    },

    "library_id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$"
    },

    "release_id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$"
    },

    "version": {
      "type": "string",
      "pattern": "^\\d{4}\\.\\d{2}\\.\\d{2}$"
    },

    "date": {
      "type": "string",
      "format": "date"
    },

    "title": {
      "type": "string",
      "minLength": 1
    },

    "description": {
      "type": "string",
      "minLength": 1
    },

    "maintainers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "url": { "type": "string", "format": "uri" }
        }
      }
    },

    "blueprint_file": {
      "type": "string",
      "pattern": "^[a-z0-9_]+\\.yaml$"
    },

    "breaking": {
      "type": "boolean",
      "default": false
    },

    "changes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["description"],
        "additionalProperties": false,
        "properties": {
          "description": { "type": "string" },
          "breaking": { "type": "boolean", "default": false }
        }
      }
    },

    "external_references": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["label", "url"],
        "additionalProperties": false,
        "properties": {
          "label": { "type": "string" },
          "url": { "type": "string", "format": "uri" }
        }
      }
    },

    "status": {
      "type": "string",
      "enum": ["active", "deprecated"]
    }
  },

  "additionalProperties": false
}
