{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://yarafie.github.io/awesome-ha-blueprints/schemas/blueprint.schema.json",
  "title": "Awesome HA Library â€“ Blueprint Schema",
  "description": "Canonical schema describing the identity and semantics of a blueprint (controller, hook, or automation).",
  "type": "object",
  "required": [
    "category",
    "blueprint_id",
    "name",
    "description",
    "librarians",
    "images",
    "status"
  ],
  "properties": {
    "category": {
      "type": "string",
      "enum": ["controllers", "hooks", "automations"],
      "description": "Blueprint category."
    },

    "blueprint_id": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$",
      "description": "Canonical blueprint identifier."
    },

    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable blueprint name."
    },

    "description": {
      "type": "string",
      "minLength": 1,
      "description": "Canonical description of what this blueprint does."
    },

    "manufacturer": {
      "type": "string",
      "minLength": 1,
      "description": "Device manufacturer (controllers only)."
    },

    "model": {
      "type": "string",
      "minLength": 1,
      "description": "Device model identifier (controllers only)."
    },

    "model_name": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable device model name (controllers only)."
    },

    "librarians": {
      "type": "array",
      "minItems": 1,
      "description": "Curators responsible for defining this blueprint.",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "description": "Librarian identifier (e.g. GitHub username)."
          },
          "name": {
            "type": "string",
            "description": "Display name of the librarian."
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "Optional librarian profile URL."
          }
        }
      }
    },

    "images": {
      "type": "array",
      "minItems": 1,
      "description": "Image assets associated with this blueprint. At least one image is required.",
      "items": {
        "type": "string"
      }
    },

    "manual_files": {
      "type": "array",
      "description": "Optional documentation or manual files associated with this blueprint.",
      "items": {
        "type": "string"
      }
    },

    "tags": {
      "type": "array",
      "description": "Optional searchable tags for this blueprint.",
      "items": {
        "type": "string"
      }
    },

    "external_references": {
      "type": "array",
      "description": "Optional external reference links related to this blueprint.",
      "items": {
        "type": "object",
        "required": ["label", "url"],
        "additionalProperties": false,
        "properties": {
          "label": {
            "type": "string",
            "minLength": 1
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    },

    "status": {
      "type": "string",
      "enum": ["active", "testing", "development", "retired", "deprecated"],
      "description": "Lifecycle status of the blueprint."
    }
  },

  "allOf": [
    {
      "if": {
        "properties": {
          "category": { "const": "controllers" }
        }
      },
      "then": {
        "required": ["manufacturer", "model", "model_name"]
      }
    },

    {
      "if": {
        "properties": {
          "category": { "enum": ["hooks", "automations"] }
        }
      },
      "then": {
        "not": {
          "anyOf": [
            { "required": ["manufacturer"] },
            { "required": ["model"] },
            { "required": ["model_name"] }
          ]
        }
      }
    }
  ],

  "additionalProperties": false
}
