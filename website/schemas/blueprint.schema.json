{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://yarafie.github.io/awesome-ha-blueprints/schemas/blueprint.schema.json",
  "title": "Awesome HA Library - Unified Blueprint Schema",
  "description": "Canonical schema describing a blueprint identity for controllers, hooks, and automations.",
  "type": "object",
  "required": [
    "blueprint_id",
    "name",
    "description",
    "category",
    "status",
    "librarians"
  ],
  "properties": {
    "blueprint_id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Canonical blueprint identifier."
    },
    "name": {
      "type": "string",
      "description": "Human-readable blueprint name."
    },
    "description": {
      "type": "string",
      "description": "Description of what this blueprint represents."
    },
    "category": {
      "type": "string",
      "enum": ["controller", "hook", "automation"],
      "description": "Blueprint category."
    },
    "manufacturer": {
      "type": "string",
      "description": "Device manufacturer (controllers only)."
    },
    "model": {
      "type": "string",
      "description": "Device model identifier (controllers only)."
    },
    "model_name": {
      "type": "string",
      "description": "Human-readable device model name (controllers only)."
    },
    "supported_integrations": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Integrations supported by this blueprint."
    },
    "images": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Image assets for this blueprint."
    },
    "manual_files": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Documentation or manual files."
    },
    "external_references": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["label", "url"],
        "properties": {
          "label": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        },
        "additionalProperties": false
      },
      "description": "External reference links."
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Searchable tags."
    },
    "status": {
      "type": "string",
      "enum": ["active", "deprecated"],
      "description": "Lifecycle status of this blueprint."
    },
    "librarians": {
      "type": "array",
      "minItems": 1,
      "description": "Curators responsible for this blueprint definition.",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "category": {
            "const": "controller"
          }
        }
      },
      "then": {
        "required": ["manufacturer", "model", "model_name"]
      }
    }
  ],
  "additionalProperties": false
}
