{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://yarafie.github.io/awesome-ha-blueprints/schemas/library.schema.json",
  "title": "Awesome HA Library â€“ Library Schema",
  "description": "Canonical schema describing a blueprint library (maintainer-owned distribution) for controllers, hooks, and automations.",
  "type": "object",

  "required": [
    "library_id",
    "blueprint_id",
    "title",
    "description",
    "maintainers",
    "releases",
    "category",
    "status"
  ],

  "properties": {
    "library_id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Owning library identifier (e.g. maintainer or organization name)."
    },

    "blueprint_id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Blueprint identifier this library belongs to."
    },

    "title": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable library title."
    },

    "description": {
      "type": "string",
      "minLength": 1,
      "description": "Short description of this blueprint library."
    },

    "maintainers": {
      "type": "array",
      "minItems": 1,
      "description": "Maintainers responsible for this library.",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "description": "Maintainer identifier (e.g. GitHub username)."
          },
          "name": {
            "type": "string",
            "description": "Display name of the maintainer."
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "Optional maintainer homepage or profile URL."
          }
        }
      }
    },

    "releases": {
      "type": "array",
      "minItems": 1,
      "description": "List of release identifiers under this library.",
      "items": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9_-]+$"
      }
    },

    "category": {
      "type": "string",
      "enum": ["controllers", "hooks", "automations"],
      "description": "Blueprint category."
    },

    "status": {
      "type": "string",
      "enum": ["active", "deprecated"],
      "description": "Lifecycle status of the library."
    },

    "supported_integrations": {
      "type": "array",
      "description": "Integrations supported by this library (controllers only).",
      "items": {
        "type": "string"
      }
    },

    "external_references": {
      "type": "array",
      "description": "Optional external references related to this library.",
      "items": {
        "type": "object",
        "required": ["label", "url"],
        "additionalProperties": false,
        "properties": {
          "label": {
            "type": "string",
            "minLength": 1
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    }
  },

  "allOf": [
    {
      "if": {
        "properties": {
          "category": { "const": "controllers" }
        }
      },
      "then": {
        "properties": {
          "supported_integrations": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "category": { "enum": ["hooks", "automations"] }
        }
      },
      "then": {
        "not": {
          "required": ["supported_integrations"]
        }
      }
    }
  ],

  "additionalProperties": false
}
