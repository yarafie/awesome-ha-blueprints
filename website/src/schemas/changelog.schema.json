{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Blueprint Changelog Schema",
  "description": "Schema for changelog.json inside each blueprint package.",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["version", "date", "changes"],
    "properties": {
      "version": {
        "type": "string",
        "pattern": "^\\d+\\.\\d+\\.\\d+$",
        "description": "Semantic version (e.g., 1.4.0)."
      },
      "date": {
        "type": "string",
        "format": "date"
      },
      "changes": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["description"],
          "properties": {
            "description": { "type": "string" },
            "breaking": { "type": "boolean" }
          }
        }
      }
    },
    "additionalProperties": false
  }
}
