{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Blueprint Package Schema",
  "description": "Validates the structure of a blueprint package directory.",
  "type": "object",
  "required": ["metadata.json", "blueprint.yaml", "blueprint.mdx"],
  "properties": {
    "metadata.json": {
      "$ref": "metadata.schema.json"
    },
    "changelog.json": {
      "$ref": "changelog.schema.json"
    },
    "blueprint.yaml": {
      "type": "string",
      "description": "Main Home Assistant blueprint YAML file."
    },
    "blueprint.mdx": {
      "type": "string",
      "description": "Documentation file for Docusaurus."
    },
    "assets": {
      "type": "object",
      "description": "Folder containing images.",
      "properties": {},
      "additionalProperties": {
        "type": "string"
      }
    },
    "versions": {
      "type": "object",
      "description": "Folder containing old blueprint versions.",
      "additionalProperties": {
        "type": "string"
      }
    }
  },
  "additionalProperties": true
}
