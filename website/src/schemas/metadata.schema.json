{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Blueprint Metadata Schema",
  "description": "Schema for metadata.json inside each blueprint package.",
  "type": "object",
  "required": ["slug", "name", "category", "version", "description"],
  "properties": {
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$",
      "description": "Folder-safe unique blueprint slug (e.g., ikea_e2001_e2002)."
    },
    "name": {
      "type": "string",
      "description": "Human-friendly blueprint name."
    },
    "category": {
      "type": "string",
      "enum": ["controllers", "hooks", "automation"],
      "description": "Blueprint category."
    },
    "version": {
      "type": "string",
      "description": "Current published version or 'latest'."
    },
    "ha_blueprint_version": {
      "type": "string",
      "description": "Version used internally by Home Assistant to detect changes."
    },
    "supported_integrations": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["z2m", "zha", "deconz"]
      }
    },
    "description": {
      "type": "string",
      "description": "Short description used in listings and previews."
    },
    "author": {
      "type": "string",
      "description": "Maintainer/author of the blueprint."
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "devices": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Supported physical device model identifiers."
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
